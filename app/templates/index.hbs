<div class='flex-offset-4 main-content'>
  <div class='layout-row layout-xs-column'>
    <div class='layout-column flex'>
      {{#if showGoalDialog}}
        {{#paper-dialog fullscreen=true clickOutsideToClose=true onClose="closeGoalDialog"}}
          {{#paper-form as |form|}}
            {{#paper-dialog-content}}
              {{form.input id='goal' required=true label="Goal" maxlength=60 block=true passThru=(hash rows=5) value=goal onChange=(action (mut goal))}}
            {{/paper-dialog-content}}
            {{#paper-dialog-actions}}
              {{#paper-button primary=true onClick="closeGoalDialog"}}cancel{{/paper-button}}
              {{#paper-button primary=true id='create' disabled=form.isInvalid onClick="createGoal"}}
                Add
              {{/paper-button}}
            {{/paper-dialog-actions}}
          {{/paper-form}}
        {{/paper-dialog}}
      {{/if}}
      <div class='layout-row layout-align-center-center'>
        {{#paper-button id='add-goal' fab=true raised=true onClick="openGoalDialog"}}{{paper-icon "add" size=24}}{{/paper-button}}
      </div>
      <div class='layout-row layout-align-center-center'>
        {{#paper-content class="md-whiteframe-z2"}}
          {{#paper-list}}
            {{#each model.goals as |g|}}
              {{list-item goal=g delete="deleteGoal"}}
            {{/each}}
          {{/paper-list}}
        {{/paper-content}}
      </div>
    </div>
    <div class='layout-column flex'>
      {{#if showTaskDialog}}
        {{#paper-dialog fullscreen=true clickOutsideToClose=true onClose="closeTaskDialog"}}
          {{#paper-form as |form|}}
            {{#paper-dialog-content}}
              {{form.input id='task' required=true label='Task' maxlength=60 block=true value=task onChange=(action (mut task))}}
              {{#paper-content class="md-whiteframe-z1 list-demo list-controls-demo"}}
                {{#paper-list}}
                  {{#paper-subheader class="md-no-sticky"}}Related Goals{{/paper-subheader}}
                  {{#each model.goals as |goal|}}
                    {{checkbox-wrapper goal=goal toggle='toggleGoal'}}
                  {{/each}}
                {{/paper-list}}
              {{/paper-content}}
            {{/paper-dialog-content}}
            {{#paper-dialog-actions}}
              {{#paper-button primary=true onClick="closeTaskDialog"}}cancel{{/paper-button}}
              {{#paper-button primary=true id='create' disabled=form.isInvalid onClick="createTask"}}
                Add
              {{/paper-button}}
            {{/paper-dialog-actions}}
          {{/paper-form}}
        {{/paper-dialog}}
      {{/if}}
      <div class='layout-row layout-align-center-center'>
        {{#paper-button id='add-task' fab=true raised=true onClick="openTaskDialog"}}{{paper-icon "add" size=24}}{{/paper-button}}
      </div>
      <div class='layout-row layout-align-center-center'>
        {{#paper-content class="md-whiteframe-z2"}}
          {{#paper-list}}
            {{#each model.tasks as |task|}}
              {{#paper-item class='md-3-line'}}
                <div class="md-list-item-text task">
                  <p>{{task.description}}</p>
                </div>
              {{/paper-item}}
              {{paper-divider}}
            {{/each}}
          {{/paper-list}}
        {{/paper-content}}
      </div>
    </div>
  </div>
</div>
